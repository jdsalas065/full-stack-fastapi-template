# Backend Environment Configuration
# This file contains environment variables for the FastAPI backend
# Default configuration is for LOCAL DEVELOPMENT
# For Docker deployment, comment out local values and uncomment Docker alternatives

# =============================================================================
# PROJECT CONFIGURATION
# =============================================================================
PROJECT_NAME="Full Stack FastAPI Project"

# Environment: local, staging, production
ENVIRONMENT=local

# Used by the backend to generate links to the frontend
FRONTEND_HOST=http://localhost:5173

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:5173,https://localhost,https://localhost:5173"

# Security - WARNING: Change in production!
# For local development, "changethis" is allowed but will show a warning
SECRET_KEY=changethis

# =============================================================================
# FIRST SUPERUSER (Admin Account)
# =============================================================================
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# =============================================================================
# POSTGRESQL DATABASE
# =============================================================================
# LOCAL DEVELOPMENT: Use localhost when running PostgreSQL locally
POSTGRES_SERVER=localhost
# DOCKER: Uncomment the line below when running with docker-compose
# POSTGRES_SERVER=db

POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changethis

# =============================================================================
# MINIO OBJECT STORAGE
# =============================================================================
# LOCAL DEVELOPMENT: Use localhost:9000 if running MinIO locally
# or minio:9000 if connecting to MinIO running in Docker while backend runs locally
MINIO_ENDPOINT=minio:9000
# DOCKER: When running backend in Docker, use the service name
# MINIO_ENDPOINT=minio:9000

MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET=documents

# =============================================================================
# OPENAI (for file processing with LLM)
# =============================================================================
# Leave empty if not using OpenAI features
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_TIMEOUT=30.0

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
# Leave empty if not using Sentry
SENTRY_DSN=
